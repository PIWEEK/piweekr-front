include ../../../mixins

nav.nav-bar
    a.logo(
        [routerLink]="['/']",
        (click)="setTitle( 'Home | ΠWEEK' )"
    )
        img(src="/assets/images/logo.png")
    a(
        [routerLink]="['/ideas']",
        (click)="setTitle( 'Ideas | ΠWEEK' )"
    ) Ideas
    a(
        [routerLink]="['/projects']",
        (click)="setTitle( 'Projects | ΠWEEK' )"
    ) Projects
    a(
        [routerLink]="['/marketplace']",
        (click)="setTitle( 'Marketplace | ΠWEEK' )"
    ) Marketplace

    .login(*ngIf="session.currentUser")
        .avatar
            avatar-editor(
                editable="false",
                avatar-type="small-head",
                [avatar]="session.currentUser.avatar")

        a(
            [routerLink]="['/profile']",
            (click)="setTitle( 'Profile | ΠWEEK' )"
        ) {{session.currentUser.fullName}}

    .login(*ngIf="!session.currentUser")
        a(
            href="javascript:void(0)",
            (click)="displayLogin()"
        ) Login
.login-form-wrapper(*ngIf="isLoginVisible")
    login-form((loginVisibility)="handleCloseLogin()")
        +comploader
