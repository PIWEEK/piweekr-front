.author 
  avatar-editor(
    *ngIf="comment.owner",
    editable="false",
    avatar-type="small-body", 
    [head]="comment.owner.avatar.head",
    [body]="comment.owner.avatar.body",
    [legs]="comment.owner.avatar.legs")

.content
  .header
    span.author(*ngIf="comment.owner") {{ comment.owner.fullName }}
    p.date on {{ comment.createdAt }}
  p.text {{ comment.content }}