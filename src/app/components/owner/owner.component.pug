.menu
    a(href='') Menu
    ul.menu
        li.item(*ngFor='let item of options')
            a(
                href='javascript:void(0)',
                [title]='item.name',
                (click) = 'item.action(cardId)'
            ) {{ item.name }}

.data
    .avatar
        avatar-editor(
            editable="false",
            avatar-type="small-head",
            [head]="owner.avatar.head",
            [body]="owner.avatar.body",
            [legs]="owner.avatar.legs",
            background="black"
        )
    .name {{ owner.fullName }}
